<Window x:Class="DealOrNoDeal.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealOrNoDeal"
        mc:Ignorable="d"
        Title="Dialog" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="button" Content="Ja" HorizontalAlignment="Left" Margin="40,220,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.207,0.607" Click="button_Click"/>
        <Button x:Name="button1" Content="Nein" HorizontalAlignment="Left" Margin="179,220,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="33,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Background="#E5DEDEDE"><Run Text="Möchten Sie das Angebot von 0 annehmen"/><Run Text="?"/></TextBlock>
        <Grid.Background>
            <ImageBrush ImageSource="offer.png"/>
        </Grid.Background>
    </Grid>
</Window>
