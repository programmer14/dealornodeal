<Window x:Class="DealOrNoDeal.Score"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealOrNoDeal"
        mc:Ignorable="d"
        Title="Score" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label FontSize="20" Content="Highscores" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"></Label>
        <DataGrid VerticalAlignment="Center" ItemsSource="{Binding ScoreList}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Place" Width="*" Binding="{Binding Place}"></DataGridTextColumn>
                <DataGridTextColumn Header="Score" Width="*" Binding="{Binding Score}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
